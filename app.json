      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fiap.dowlibras",
      "buildNumber": "1.0.0"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#070B24"
        
      },
      "package": "com.fiap.dowlibras"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "description": "Aplicativo educacional para aprender Libras do zero!",
    "githubUrl": "https://github.com/gustavofssilva/DowLibras"
  }
}
